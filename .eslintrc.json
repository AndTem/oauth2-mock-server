{
  "root": true,
  "env": {
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "rules": {
    "linebreak-style": "off",
    "no-use-before-define": [ "error", { "functions": false } ],
    "strict": [ "error", "global" ],
    "valid-jsdoc": "warn"
  }
}
